<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Delivery.Menu"
       xmlns:views="clr-namespace:Delivery.Views">

    <Shell.FlyoutHeader>
        <Grid Padding="0,32" ColumnDefinitions="1*,2*" RowDefinitions="Auto, Auto" BackgroundColor="{StaticResource PrimaryColor}">
            <Image Source="BagWhite" Grid.RowSpan="2"/>
            <Label Text="Bem vindo ao" Grid.Column="1" Style="{StaticResource MenuHeaderLabel}"/>
            <Image Source="LogoWhite" HorizontalOptions="Start" Grid.Column="1" Grid.Row="1"/>
        </Grid>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Principais" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Lojas" Icon="MenuIconStore" ContentTemplate="{DataTemplate views:StartMenuView}"/>
        <ShellContent Title="Carrinho" Icon="MenuIconRestaurant" ContentTemplate="{DataTemplate views:CompletePurchaseView}"/>
        <ShellContent Title="Pedidos" Icon="MenuIconCinema" ContentTemplate="{DataTemplate views:UserView}"/>
        <ShellContent Title="Perfil" Icon="MenuIconTicket" ContentTemplate="{DataTemplate views:LoginView}"/>
    </FlyoutItem>

    <ShellContent Title="Novidades" Icon="MenuIconNews" ContentTemplate="{DataTemplate views:StartMenuView}"/>
    <ShellContent Title="Ajuda" Icon="MenuIconNews" ContentTemplate="{DataTemplate views:CartButtonsView}"/>

</Shell>